/*书籍列表  */
.added{
	position:absolute;
	left:0;
	top:0;
	width:100%;
	height:100%;
	background:rgba(0,0,0,0.5);
	display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index:1;
  opacity:1;
  
	
}
.opacity0{
	transition:1s;
	opacity:0;
}
.opacity1{
	opacity:1;
}
.added .iconAdd image{
	width:67rpx;
	height:49rpx;
}
.added .text{
	color:#fff;
	font-size:12px;
}
page {
  height: 100%;
  background-color:#f8f8f8;
}

view {
  box-sizing: border-box;
}

.page-list {
  height: 100%;
  width: 100%;
  position: relative;
  background-color: #f8f8f8;
}

.choose_grade {
  width: 140rpx;
  margin: 20rpx 30rpx 0 0;
  padding: 15rpx 0;
  color: #fff;
  text-align: center;
  background: #1fc784;
  border-radius: 12rpx;
}

.book-list {
  padding: 0 10px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
}

.book-list .item .item-delete {
  position: absolute;
  z-index: 1;
  width: 35px;
  height: 35px;
  margin-left: -10px;
  margin-top: -10px;
}

.book-list .item .item-delete image {
  width: 30px;
  height: 30px;
}

.book-list .item {
  width: 33.33%;
  text-align: center;
  padding: 10px;
}

.book-list .item-content {
  position: relative;
  box-shadow: 0 0 5px 2px #eee;
  background-color: #fff;
}

.book-list .item .item-content .icon-view {
  padding: 5px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}

.book-list .item .item-content .icon {
  width: 100%;
  height: 120px;
}

.book-list .item .text-view {
  margin-top: 15rpx;
  font-size: 12px;
  line-height: 15px;
  color: #777;
}

.book-img {
  background-size: 100% auto;
}

.book_publish_brief {
  position: absolute;
  top: 20rpx;
  left: 5px;
  width: 100rpx;
  padding: 4rpx 0;
  text-align: center;
  border-bottom-right-radius: 19rpx;
  border-top-right-radius: 19rpx;
  background-color: rgba(246, 134, 51, 0.9);
}

.exiting {
  position: absolute;
  bottom: 0;
  padding: 10rpx 0;
  width: 100%;
  color: #fff;
  text-align: center;
  background-color: #06c1ae;
}

.grade_name {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  font-weight: bold;
}

.grade_name view:first-child {
  width: 20rpx;
  height: 20rpx;
  margin-right: 20rpx;
}

.grade0 {
  background-color: #78c8e6;
}

.scanBookList {
  background-color: rgb(231, 40, 28);
}

.grade1 {
  background-color: #00cc0a;
}

.grade2 {
  background-color: #ffe349;
}

.grade3 {
  background-color: #ff895b;
}

.grade4 {
  background-color: #7c94be;
}

.grade5 {
  background-color: #f26797;
}

