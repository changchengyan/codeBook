/* pages/seed/seed.wxss */
.pic-swiper {
    width: 100%;
    height: auto;
    background: #333;
}
.slide-image {
    width: 100%;
    height: 100%;
}
.title{ padding: 18px 15px 10px 18px; background-color: #fff; color: #333;}
.price{color: #06c1ae; padding: 0px 18px 15px 18px;background-color: #fff;}

.desc-canvas{ padding: 20px 18px 20px 18px;background-color: #f0f0f0;}
.desc-text-base{ padding: 0px 0px 0px 0px; color: #777; }
.info-canvas{ padding: 20px 0px 20px 0px;background-color: #fff;}
.info{padding: 0px 18px 0px 18px; background-color: #fff;text-align:justify !important;}
.info-canvas .mark-title{ padding: 0px 0px 0px 18px;}
.info-canvas .mark-title text{ padding: 0px 0px 0px 10px; border-left: 2px solid #777;}
.info .text{word-wrap:break-word;word-break:break-all; }
.info .text-box{padding: 0px 18px 0px 18px;}
.info .info-item .image{ padding: 10px 0px 10px 0px;}
.info .info-item  image{ max-width: 100%; width: 100%;}


.buy-visibility{ height: 50px;}
.buy-canvas{ 
    position: fixed; bottom: 0px; left: 0px; width: 100%; height: 50px; background-color: #f8f8f8;
    text-align: center;
    padding: 5px 0px 0px 0px;
    border-top:1px solid #f0f0f0;
}
.buy-canvas .button{ background-color: #06c1ae; color: #fff; width: 50%; margin: auto; height: 38px; padding: 8px 0px 0px 0px;}
.buy-stop .button{ background-color: #f0f0f0; color: #999;}
.price-info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.bought-seed {
  color: #06c1ae;
  padding: 0 10px 15px;
}
.success-bg {
  position: fixed;
  top: 0;
  left:0;
  width: 100%;
  height: 100%;
  background:#fff;
  z-index: 10000;
}
.success-word {
  position: absolute;
  top:30%;
  left:0;
  right: 0;
  margin: 0 auto;
  z-index: 110000;
}
.tip-word {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width:  120px;
  margin: 0 auto;
  align-items: center;
  color: #06c1ae;
}
.success-word .button {
  width:  120px;
  height: 40px;
  margin: 20px auto;
  line-height: 40px;
  text-align: center;
  background: #06c1ae;
  color: #fff;
  font-size: 16px;
  border-radius: 4px;
  
}
/*分享进入*/
.pub-navigation {
  position:fixed;
  z-index:100;
  bottom:75px;
  left:0px;
  width:100%;
  display:flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:flex-start;
  padding:0px 15px 0px 15px;

}
