/* pages/desk/desk.wxss */
.page-list
{
    height: 100%;
    width: 100%;
    position: absolute;
}
.flex-body
{
  display:flex;
  flex-direction: column;
}

.flex-body .book-scan{font-size: 12pt; padding: 140px 0px 20px 0px; color: #777; text-align: center;}
.flex-body .book-scan .text-view{ padding: 15px 0px 10px 0px; color: #999; font-size: 12px;}
.flex-body .scan-icon{ width:80px; height:70px;}
.flex-body .info-view{ text-align: center;}
.flex-body .scan-info{ width:197px; height:210px;}
.flex-body .book-desk{background-color: #d9bef7; font-size: 12pt; padding: 30% 0px 30% 0px; color: #777; text-align: center;}


.book-add-area{ height:50pt; background-color: #f0f0f0; text-align: center; position:fixed; z-index: 2; top: 0px; left: 0px; width: 100%;}
.book-add-area .book-count{ float: left; color: #333;}
.book-add-area .book-scan{ float: right;padding: 11px 10px 5px 0px; text-align: center;}
.book-add-area .book-scan .icon image{ width:25px;height:25px;}
.book-add-area .book-scan .text{ padding: 3px 0px 0px 0px; font-size: 12px;color: #777; line-height: 12px;  }
.book-add-area-visibility{ height: 50pt; text-align: center; padding: 20pt 0pt 0pt 0pt; color: #999;}



/**书籍列表**/
.book-list
{
 
  padding:12px 10px 10px 10px;
  background-color: #fff;
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  justify-content:flex-start;
  align-items:flex-start;
  width: 100%;
}
.book-list .item .item-delete{ position: absolute; z-index: 1; width: 35px; height: 35px; margin-left: -10px; margin-top: -10px;}
.book-list .item .item-delete image{ width: 30px;}

.book-list .item{width: 33.33%; text-align: center; padding:10px; }
.book-list .item-content{box-shadow:0 0 5px 2px #eee; background-color: #fff;}
.book-list .item .item-content .icon-view{padding:5px;display:flex;flex-direction:column;justify-content:center;overflow:hidden;}
.book-list .item .item-content .icon{width: 100%;height:120px;}
.book-list .item .text-view{ font-size: 12px; line-height: 15px; padding: 10px 0px 0px 0px; color: #777;}
.book-img {
  background-size: 100% auto
}

.desk-nodata
{
  margin-top: 50pt;
  padding:30px 10px 30px 10px;
  text-align: center;
  font-size: 14px;  
}
/**是否确认删除**/
.maskBox{
	position:fixed;
	left:0;
	top:0;
	width:100%;
	height:100%;
  	z-index:2;
}
.maskBox .mask{
	width:100%;
	height:100%;
	background: #000;
  	opacity: 0.5;
}
.to-sure-del {

    position:fixed;
    top: 50%;
    left: 0;
    right:0;
    width: 240px;
    margin:0 auto;
    
    z-index: 11000
    
}
.to-sure-word {
    height:70px;
    border: 1px solid #ddd;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    border-bottom: 0;
    font-size: 16px;
    color: #333;
    line-height: 70px;
    text-align:center;
    background:#fff;
}
.to-choose-sure {
    width: 100%;
    display: flex-box;
    flex-direction: row;
    border: 1px solid #ddd;
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
    background:#fff;
}
.to-choose-sure .choose-button {
    display: inline-flex;
    width: 50%;
    padding: 10px 0;
    flex-direction: row;
    justify-content: center;
}
.to-choose-sure .choose-button:nth-of-type(1) {
    border-right: 1px solid #ddd;
}