/* pages/view/video/video.wxss */
page{height:100%;}
.contain-box{
    display: flex;
    flex-direction:column;
    justify-content:center;
    align-items:center;
    width:100%;
    height:100%;
    overflow: hidden;
}
.video-box{width:100%;}
.scrollView{height:100%;}
.video-contain{
	display: flex;
    width:100%;
    height:calc(100vh - 225px);
    }
.video-message
{ 
    position:absolute; z-index: 2;
    width: 100%; height: 150px; 
    font-size:14px;color: #fff; line-height: 20px;
    display: flex;
    flex-direction:column;
    justify-content:center;
    align-items:center;
}
.video-message .play-button
{
    padding: 5px 15px 5px 15px; border: 1px solid #999; border-radius: 15px; margin-top: 10px;

}
.video-view{ background-color: #06c1ae;}
.video-view video{ width: 100%;}


.head-info
{ 
    padding: 7px 0px 10px 15px; background-color: #06c1ae;
    width:100%;
    display: flex;
    flex-direction:row;
    justify-content:flex-start;
    align-items:flex-start;
    color: #fff;
    height:85px;
}
.head-info .image-canvas
{
   width: 60px; max-width: 60px; min-width: 60px; 
   padding: 3px 0px 0px 0px;
   flex-grow:1; 
}
.head-info .image-canvas image
{
    width: 60px; height: 60px;
}
.head-info .text-canvas
{

    padding: 0px 0px 0px 10px;
    flex-grow:8; 
}
.head-info .text-canvas .instance_name{ padding: 0px 0px 5px 0px;width: 100%}

.head-info .text-canvas .instance_desc{ 
    color: #cfebeb;overflow:hidden; 
    text-overflow:ellipsis;
    display:-webkit-box; 
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;

 }
.head-info  .instance_more{ flex-grow:1; width: 30px; min-width: 30px; padding: 23px 0px 20px 0px; text-align: center;}
.head-info  .instance_more image{ width: 10px;height:18px;}
.list-title
{ 
    padding: 10px 20px 10px 20px; 
    background-color: #04bca9; color: #fff;
}
.item-canvas{}
.video-list-canvas .item-canvas .video-item
{
    padding: 12px 20px 12px 15px;
    border-bottom: 1px solid #eee;
    display: flex;
    flex-direction:row;
    justify-content:flex-start;
    align-items: center;
    border-left: 3px solid #fff;
}
.video-list-canvas .item-canvas .video-item .number
{ 
    flex-grow:1; 
    min-width: 20px; min-height: 20px;
    max-width: 20px; max-height: 20px;
    font-size: 10px; line-height: 20px; background-color: #f8f8f8; 
    border:1px solid #ddd; border-radius: 20px; text-align:center; color: #999;
}
.video-list-canvas .item-canvas .video-item .name
{ 
    flex-grow:5;   
    padding: 0px 0px 0px 10px;
    line-height: 20px;
}
.video-list-canvas .item-canvas .video-item .time
{ 
    flex-grow:1;   
    text-align: right;
    color: #999;
}


.video-list-canvas .item-canvas .video-item-over
{
    padding: 12px 20px 12px 15px;
    border-bottom: 1px solid #cfebeb;
    display: flex;
    flex-direction:row;
    justify-content:flex-start;
    align-items: center;
    border-left: 3px solid #06c1ae;
    background-color: #eaf9f9;
}
.video-list-canvas .item-canvas .video-item-over .number
{ 
    flex-grow:1; 
    min-width: 20px; min-height: 20px;
    max-width: 20px; max-height: 20px;
    font-size: 10px; line-height: 20px; background-color: #06c1ae; 
    border:1px solid #06c1ae; border-radius: 20px; text-align:center; color: #fff;
}
.video-list-canvas .item-canvas .video-item-over .name
{ 
    flex-grow:5;   
    padding: 0px 0px 0px 10px;
    line-height: 20px;
    color: #06c1ae;
}
.video-list-canvas .item-canvas .video-item-over .time
{ 
    flex-grow:1;   
    text-align: right;
    color: #43d0c2;
}
