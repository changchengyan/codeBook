/* pages/view/match/match.wxss */
/*报名首页*/
swiper-item{
	overflow:scroll;
}
.activity{
	width:100%;
	height:100%;
  position: fixed;
}

.match-img {
  display: flex;
  position: relative;
  width: 100%;
  min-height: 100%;
}
.move-change {
  transition: all 1s;
  transform: translateY(-100%)
}
.activity_img{
  position: absolute;
	width:100%;height:100%;
}
.activity .next{
	position:absolute;
	left:0;
	right:0;
	bottom:120rpx;
	text-align:center;
	animation: move 1s infinite  alternate;	
	-webkit-animation: move 1s infinite  alternate;
}
.activity .next image{
	width:52rpx;
	height:51rpx;	
}
@keyframes move
{
	from {bottom:110rpx;}
	to {bottom:130rpx;}
}
@-webkit-keyframes move
{
	from {bottom:110rpx;}
	to {bottom:130rpx;}
}

/*报名详情页align-items:center;*/
.activity .activity_des{
	display:flex;
	flex-direction:column;
	justify-content:flex-start;	
	padding-bottom:94rpx;
	height:100%;
  overflow: auto;

}
.activity .activity_des .info{	
	background:#06c1ae;	
	color:#fff;
}
.activity .info .info_text{
	display:flex;
	flex-direction:row;
	align-items:flex-start;
	justify-content:flex-start;
	padding:15px 15px 0;
}

.activity .info .info_text image{
	width:60px;
	min-width:60px;
	max-width:60px;
	height:60px;
	display:block;
	padding-top:3px;
	flex-grow:1;
	
}

.activity .info .info_text .info_des{
	padding:0 15px;
	flex-grow:8;
}
.activity .info .info_text .info_des .title{
	overflow:hidden;
	text-overflow:ellipsis;
	display:-webkit-box;
	-webkit-box-orient:vertical;
	-webkit-line-clamp:2;

}
.activity .info .info_text .des{
	overflow:hidden;
	text-overflow:ellipsis;
	display:-webkit-box;
	-webkit-box-orient:vertical;
	-webkit-line-clamp:2;
	
		
}
.activity .info .progress{
	
	margin-left:156rpx;
	padding-top:20rpx;
	padding-bottom:25rpx;
	display:flex;
	flex-direction:row;
	justify-content:flex-start;
}
.activity .info .progress .pro_all{
	background:rgba(255,255,255,0.4);
	border-radius:11rpx;
	width:400rpx;
	height:12rpx;
	align-items:center;
	margin:auto 0;
	position:relative;
}
.activity .info .progress .pro_active{
	background:#fff;
	border-radius:11rpx;
	position:absolute;
	left:0;
	top:0;
	height:12rpx;
}
.activity .info .progress .text{
	align-items:center;
	font-size:10px;
	padding-left:15rpx;
}
.activity .info .state{
	background:rgba(0,0,0,0.1);
	padding:13rpx 0;
	text-align:center;
	display:flex;
	flex-direction:row;
	justify-content:flex-start;
	font-size:12px;
	line-heihgt:18px;
}
.activity .info .limit{
	display:flex;
	flex-direction:column;
	justify-content:flex-start;
}
.activity .info .state .num{
	font-size:10px;
}
.activity .info .state .left{
	border-right:1px solid #06c1ae;
	padding:16rpx 0;
}
.activity .info .state .middle{
	border-right:1px solid #06c1ae;
	padding:16rpx 0;
}
.activity .info .state .right{
	padding:16rpx 0;
}
.activity .info .state1 .left{	
	flex:1;
}
.activity .info .state1 .right{
	flex:1;
}
.activity .info .state2{
	margin-top:21rpx;
}
.activity .info .state2 .left{	
	flex:1;
}
.activity .info .state2 .middle{	
	flex:1;
}
.activity .info .state2 .right{	
	flex:1;
}
.activity .info .state text{
	font-size:22px;
}
.activity .view-des {
  height: 100%;
}
.activity .activity_des .detail_title{
	align-items:center;
}
.activity .activity_des .contain{
	align-items:center;
}
.activity .activity_des .detail_title{
	display:flex;
	flex-direction:row;
	justify-content:space-between;
	padding:28rpx 26rpx;
	background:#f8f8f8;
	
}
.activity .activity_des .detail_title .text{
	font-size:14px;
	color:#333;
}
.activity .activity_des .detail_title .notice{
	display:flex;
	flex-direction:row;
	justify-content:flex-start;
}
.activity .activity_des .detail_title .notice text{
	font-size:12px;
	color:#9f9f9f;
	padding-right:9rpx;
}
.activity .activity_des .detail_title .notice image{
	width:22rpx;
	height:22rpx;
	margin:auto 0;
}
.activity .activity_des .contain{
	padding:13rpx 26rpx;
	font-size:12px;
	line-height:18px;
	color:#666;
	flex-grow:1;
	overflow-y:scroll;

}
.activity .activity_des .contain view{
	text-indent:2em;
}
.activity .activity_des .contain .image {
  text-indent: 0;
}
.activity .activity_des .contain image{width:100%;}

/*报名须知*/
.mask{
	position: fixed;
	top: 0;
	left:0;
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,0.5);
	z-index: 1000;
	display: flex;
    justify-content:center;
	
}
.register_notice{
	border-radius:10rpx;
	width:520rpx;
	color:#333;	
	background:#f8f8f8;
	align-items:center;
	line-height:18px;
	margin:auto 0;
	display: flex;
	flex-direction:column;
	justify-content:flex-start;
	
}
.register_notice .title{
	width:100%;
	font-size:16px;
	padding:30rpx 0;
	text-align:center;
	border-bottom:1px solid #eee;
	
	
}
.register_notice .contain{
	font-size:14px;
	line-height:22px;
	padding:20rpx 26rpx 40rpx;
	max-height:350px;
	overflow-y:scroll;
}
.register_notice .contain .list{
	font-size:14px;
}
.register_notice .know{
	width:100%;
	font-size:16px;
	color:#06c1ae;
	text-align:center;
	padding:24rpx 0;
	border-top:1px solid #eee;
}

.now{
	position:fixed;
	bottom:0;
	width:100%;
	z-index:100;
	background:rgba(0,0,0,0.5);
	font-size:14px;
	padding:34rpx 0;
	text-align:center;
	color:#fff;
}
.now2{
	background:#06c1ae;	
}
.now3{
	background:#999;	
}
/*分享进入页面*/
