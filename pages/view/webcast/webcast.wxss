/* pages/view/webcast/webcast.wxss */
page{height:100%;background:#f2f2f2;}
.pub-navigation{
	bottom:70px;
}
.contain-box{
    display: flex;
    flex-direction:column;
    justify-content:flex-start;
    align-items:flex-start;
    width:100%;
    overflow: hidden;
    height:100%;
}
.video-box{width:100%;}
.scrollView{height:100%;}


.video-view{ background-color: #06c1ae;width:100%;display: flex;flex-direction: row;justify-content: center}
.video-view video{ width: 100%;height:225px}

.info-canvas{ 
	padding:7px 0px 10px 15px;
	background-color:#06c1ae;
	width:100%;
	height:82px;
	display:flex;
	flex-direction:row;
	justify-content:flex-start;
	align-items:flex-start;
	color:#fff;
}
.info-canvas .image-canvas
{   
   width: 60px; max-width: 60px; min-width: 60px; padding: 3px 0px 0px 0px;
   flex-grow:1; 
    
}
.info-canvas .image-canvas image
{
	 width: 60px; 
	 height:60px;
}
.info-canvas .text-canvas{
	padding:0px 0px 0px 10px;
	flex-grow:8;
  width: 90%;
	
}
.info-canvas .instance_more{
	flex-grow:1;
	width:30px;
	min-width:30px;
	padding:23px 0px 20px 0px;
	text-align:center;
}
.user-img {
  width:10%;
  min-width:30px;
  padding:10px 0px 20px 0px;
  text-align:center;

}
.info-canvas .user-img .img {
  width: 40px
}
.info-canvas .instance_more image{width:10px;height:18px;}
.title{ padding: 10px 15px 0px 15px; color: #fff;width:100%;overflow: hidden;text-overflow: ellipsis;white-space: nowrap}
.desc{ padding: 0px 15px 10px 15px; color: #fff;width:100%;overflow: hidden;text-overflow: ellipsis;white-space: nowrap}
.communion-toform{
	width:100%;
	height:50px;
	position:fixed;
	z-index:1;
	left:0px;
	bottom:0px;
	background-color:#f8f8f8;
	border-top:1px solid #eee;
	padding:8px 8px 8px 8px;
}
.communion-toform view {
	font-size:12px;
	color:#999;
	background-color:#f0f0f0;
	border-radius:5px;
	padding:8px 5px 8px 5px;
}

/*直播弹幕样式*/
.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  justify-content: space-between;
  overflow:hidden;
  height:calc(100vh - 225px - 82px);
  box-sizing: border-box;
  position:relative;
}
.msgs-wrapper{position: absolute;bottom:60px;left:20rpx;right:20rpx;background-color:#f8f8f8;
}
.msgs{max-width:90%;display:block;padding:5rpx;margin:5rpx 0;word-wrap:break-word}
.msg-item{padding:8rpx 5rpx;border-radius:4rpx;font-size:14px;color:#999;}
.nickname{color:#06c1ae}

.input-section{
  position: absolute;
  bottom:0;
  width:100%;
  background-color:#f8f8f8;
	border-top:1px solid #eee;
	padding:8px 8px 8px 8px;
	display: flex;
  flex-direction: row;
  /* align-items: center; */
  justify-content: space-between;
}

.input-section input{
  background:#fff;
  font-size:12px;
  color:#999;
  border-radius:5px;
  height:34px;
  padding:0 5px;
  flex:3;
}
.danmu_button{flex:1;}
.danmu_button .pub-submit{
text-align:center;border-radius:5px;background-color:#F8F8F8;height:34px;margin-left:10px;
}










