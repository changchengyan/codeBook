/* pages/view/article/article.wxss */
.live_image{width:100%;height:123px;}
.title{ padding: 20px 15px 10px 13px; }
.datetime{color: #999; padding: 0px 20px 15px 15px;}
.original{ border: 1px solid #999; color: #777; border-radius: 15px; padding: 2px 8px 2px 8px; display: inline-flex; margin-right: 10px;}
.desc-canvas{ padding: 20px 15px 0px 15px;background-color: #f9f9f9; border-top: 1px solid #e9e9e9;}
.desc-text-base{ padding: 0px 0px 0px 10px; border-left:2px solid #bbb; color: #777; }

.audio-box{
    width: 100%;
    text-align:center;
    padding:10px 0px 10px 0px;
}
.audio-box .audio {
    width: 100%; 
}
.audio-box .contain{
	display: flex;
    flex-direction:row;
    justify-content:flex-start;
    align-items:flex-start;
    border:1px solid #e0e0e0;
    border-radius:3px;
}
.audio-box .contain .pic{
	position:relative;

}
.audio-box .contain .pic .img{
	width:65px;
	height:65px;
	display:block;
}
.audio_play{
	width:24px;
	height:24px;
	border-radius:50%;
	border:2px solid #fff;
	position:absolute;
	left:0;
	right:0;
	margin:0 auto;
	top:50%;
	transform:translateY(-10px);
}
.audio_play .play{
	width:0;
	height:0;
	border-top:5px solid transparent;
	border-bottom:5px solid transparent;
	border-left:8px solid #fff;
	position:absolute;
	left:0;
	right:0;
	margin:0 auto;
	top:50%;
	transform:translateY(-5px);
}
.audio_play .pause{
	width:8px;
	height:8px;
	background:#fff;
	position:absolute;
	left:0;
	right:0;
	margin:0 auto;
	top:50%;
	transform:translateY(-4px);	
}
.audio-box .contain .name{
	padding:0 20px;
	flex-grow:1;
	text-align:left;
	font-size:14px;
	color:#000;
	margin:auto 0;
	overflow:hidden;
	display: -webkit-box; 
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	text-overflow: ellipsis;
}
.audio-box .contain .time{
	text-align:left;
	font-size:12px;
	color:#666;
	padding-right:20px;
	margin:auto 0;
}
.info{ width:100%;overflow:hidden;padding: 10px 15px 20px 15px;background-color: #f9f9f9;text-align:justify !important;}
.info text{word-wrap:break-word;word-break:break-all;}
.info .info-item .image{ padding: 10px 0px 10px 0px;}
.info .info-item  image{ max-width: 100%; width: 100%;}
