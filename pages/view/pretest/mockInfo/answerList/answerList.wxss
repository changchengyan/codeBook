/**index.wxss**/

page {
  box-sizing: border-box;
  padding-bottom: 116rpx;
  overflow: auto;
  height: 100%;
  background:#fff;
}

.header {
  display: block;
  padding: 27rpx 0rpx 36rpx;
  font-size: 30rpx;
  line-height: 48rpx;
  background: #fff;
}

.question_detail{
	display: flex;
	flex-direction:row;
	justify-content:flex-start;
}
.xuanz {
  display: inline-block;
  width: 90rpx;
  height: 50rpx;
  margin: -5rpx 0 0;
  border-radius: 5rpx;
  background: #e6f9f7;
  color: #06c1ae;
  font-size: 20rpx;
  border-top-right-radius: 25rpx;
  border-bottom-right-radius: 25rpx;
  text-align: center;
  line-height: 50rpx;
  vertical-align: middle;
  margin-right:10px;
}
.header .title{
	flex:1;
}

.poster {
  display: block;
  padding: 0 30rpx;
  height: 348rpx;
  margin: auto;
  background: #fff;
}

.poster image, .poster video {
  width: 100%;
  height: 348rpx;
  background-color: #eee;
}

.container {
  background: #fff;
}

.list {
  position: relative;
  padding: 30rpx 30rpx 30rpx 118rpx;
  font-size: 32rpx;
  color: #333;
}

.list.error {
  padding-left: 118rpx;
  background:url("//services.chubanyun.net/system/images/codebook/xcx/answer_error.png") no-repeat 30rpx center/58rpx 58rpx;
  background-position:30rpx 24rpx;
   /*color: #f46263;*/
}

.list.success {
  padding-left: 118rpx;
  background: #fff url("//services.chubanyun.net/system/images/codebook/xcx/answer_right.png") no-repeat 30rpx center/58rpx 58rpx;
  background-position:30rpx 24rpx;
  /*color: #6c0;*/
}

.list.error .number, .list.success .number {
  display: none;
}

.number {
  position: absolute;
  left: 30rpx;
  width: 58rpx;
  height: 58rpx;
  margin: -7rpx 0 0;
  border: 2rpx solid #666;
  border-radius: 29rpx;
  text-align: center;
  line-height: 58rpx;
  font-size: 28rpx;
  color: #666;
}
.container .list .detail{
	display:flex;
    flex-direction:column;
}
.container .list .detail text{
	line-height:40rpx;
	margin-bottom:10rpx;
}
.container .list image{
	width:260px;
	display:block;
}

.list.active {
  /*background: #fbfbfb;*/
}

.list.active .number {
  background: #06c1ae;
  color: #fff;
  border:2px solid #06c1ae;
}

.list.active-success {
  /*background: #fbfbfb;
  color: #54d16f;*/
}

.list.active-success .number {
  background: #06c1ae;
  color: #fff;
  border: 2rpx solid #06c1ae;
}

.btn-bg {
  border-bottom: 1px solid #f6f6f6;
  background: #fff;
  overflow: hidden;
}

.btn {
  display: block;
  width: 690rpx;
  height: 80rpx;
  margin: 20rpx auto;
  background: #fed835;
  border-radius: 10rpx;
  text-align: center;
  font-size: 30rpx;
  color: #3d3d3c;
  line-height: 80rpx;
}

.analysis {
  margin: 20rpx 0 0;
  padding: 25rpx 30rpx 40rpx;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  background: #fff;
  font-size: 28rpx;
  line-height: 48rpx;
  color: #666;
}

.analysis .analysis-header {
  padding: 8rpx 0;
  font-size: 34rpx;
  color: #00bcd5;
}

.footer-layer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.footer {
  position: fixed;
  box-sizing: border-box;
  bottom: 0;
  width: 100%;
  transform: translate3d(0, 100%, 0px);
  -webkit-transform: translate3d(0, 100%, 0px);
  z-index: 100;
}

.count {
  position: absolute;
  box-sizing: border-box;
  top: -93rpx;
  width: 100%;
  padding: 30rpx 30rpx;
  background: #fff;
  font-size: 24rpx;
  overflow: hidden;
  zoom: 1;
  z-index: 1000;
}

.count view {
  float: right;
  line-height: 34rpx;
}

.count .collect.active {
  background: url("") no-repeat left center/34rpx 34rpx;
}

.clear {
  zoom: 1;
  overflow: hidden !important;
}

.status-lists {
  max-height: 500rpx;
  padding: 0 0 24rpx;
  border-top: 1rpx solid #eaeaea;
  background: #fff;
  z-index: 100;
  overflow: auto;
}

.status-lists .status-list {
  float: left;
  width: 98rpx;
  height: 98rpx;
  margin: 24rpx 0 0 20rpx;
  border-radius: 50rpx;
  border: 1rpx solid #ccc;
  font-size: 30rpx;
  line-height: 98rpx;
  text-align: center;
  color: #ccc;
}

.status-lists .status-list.active {
  color: #999;
  border-color: #999;
  background: #f6f6f6;
}

.status-lists .status-list.error {
  color: #f46263;
  border-color: #f46263;
}

.status-lists .status-list.success {
  color: #54d16f;
  border-color: #54d16f;
}

.status-lists .status-list.error.active {
  color: #f46263;
  border-color: #f46263;
  background: #fff3f3;
}

.status-lists .status-list.success.active {
  color: #54d16f;
  border-color: #54d16f;
  background: #f7fff0;
}

/**swiper**/

page {
  height: 100%;
}

.swiper-lists {
  position: relative;
  width: 100%;
  min-height: 100%;
  overflow-x: hidden;
}

.swiper-lists .swiper-list {
  position: absolute;
  width: 100%;
  height: 100%;
}

.swiper-lists .swiper-list.prev {
  top: 0;
  transform: translate3d(-100%, 0, 0px);
  -webkit-transform: translate3d(-100%, 0, 0px);
}

.swiper-lists .swiper-list.next {
  top: 0;
  transform: translate3d(100%, 0, 0px);
  -webkit-transform: translate3d(100%, 0, 0px);
}

/*答案解析*/

.answer_daily .result {
  margin-top: 160rpx;
  line-height: 28px;
}

.answer_daily .result .contant {
  padding: 0 26rpx;
  font-size: 14px;
  color: #333;
}

.answer_daily .result .contant .right {
  color: #06c1ae;
}

.answer_daily .result .contant .error {
  color: #ff5a5a;
}

.answer_daily .result .head {
  font-size: 12px;
  color: #333;
  text-align: center;
  line-height: 30px;
  position: relative;
  width: 100%;
}

.answer_daily .result .head .head_bg {
  position: absolute;
  left: 0;
  top: 50%;
  height: 1px;
  background: #eee;
  width: 100%;
  z-index: -1;
}

.answer_daily .result .head .text {
  width: 210rpx;
  background: #fff;
  margin: 0 auto;
}

.answer_daily .result .detail {
  padding: 0 26rpx;
  margin-top: 24rpx;
  color: #666;
  font-size: 14px;
}

.count_num {
  text-align: center;
  line-height: 50rpx;
  font-size: 12px;
}

.count_num .done {
  font-size: 18px;
  color: #06c1ae;
}

.daily_check {
  line-height: 96rpx;
  background: #06c1ae;
  color: #fff;
  font-size: 14px;
  text-align: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  left: 0;
}
